package decisao;

import javax.swing.JOptionPane;

public class Exercicio3 {
	
	public static void main(String[] args) {
		
		/* 
		 * Receba o valor do salário bruto, o nome de um colaborador e 
		 * a qtde de faltas.
		 * Se não houver faltas o salario bruto receberá um aumento de 2%.
		 * Calcule o valor do INSS sobre o salário bruto.
		 * Exiba no final o salário bruto, e o salário liquido (retirando
		 * o INSS e 8% do FGTS)
		 */
		
		short nome = Short.parseShort(JOptionPane.showInputDialog("Nome"));
		float salarioBruto = Float.parseFloat(JOptionPane.showInputDialog("Salario Bruto"));
		short faltas= Short.parseShort(JOptionPane.showInputDialog("Faltas"));
		float salario=0;
		
		if (faltas==0) {
			salario = salarioBruto * (float) 0.2;
		}else if (faltas>0) {
			salario = salarioBruto;
			
		System.out.printf("Salário: " + salarioBruto);
	}
	}
}
