package repeticao;

import javax.swing.JOptionPane;

public class DesafioDo {

	public static void main(String[] args) {
		
		/*
		 * Missão 1
		 * jogador 1 digita um numero inteiro
		 * Jogador 2 deve acertar o numero
		 * quando ele acertar, devera aparecer a mensagem "Parabéns você acertou"
		 * 
		 * Missão 2
		 * Acrescente dicas para o jogador 2 informando se o numero é > ou < o que ele digitou
		 *
		 * Missão 3
		 * Acrescente um contador de tentativas que será exibido quando o jogador 2 acertar
		 *  A mensagem deverá ser `Parabéns, você acertou com X tentativas"
		 *  Terá que criar uma variavel para contar
		 *  
		 *  != e => não é igual
		 */
		
		int numero1 = Integer.parseInt(JOptionPane.showInputDialog("Jogador 1: Digite um número"));
		int chute=0;
		int contador=0;
		do {
			chute = Integer.parseInt(JOptionPane.showInputDialog("Jogador 2: adivinhe o número"));
			contador=contador+1;
			//contador++;
			//contador+=1
			
			if (chute<numero1) {
				System.out.println("Chutando baixo");
			}else if (chute>numero1) {
				System.out.println("Chutando alto");
			}
		}while (numero1!=chute);
		JOptionPane.showMessageDialog(null, "Parabéns você acertou com " + contador + "tentativas");
					
		//int numero2 = Integer.parseInt(JOptionPane.showInputDialog("Jogador 2: Tente adivinhar"));
		
			/*
		while (numero1!=numero2) 
			
			
			if (numero1 < numero2) {
				numero2 = Integer.parseInt(JOptionPane.showInputDialog("O Número 1 é menor. Tente novamente"));
			
			}else if (numero1 > numero2) {
				numero2 = Integer.parseInt(JOptionPane.showInputDialog("O Número 1 é maior. Tente novamente"));
		}
		System.out.println("Parabéns você acertou");
		*/
		
	}
}
