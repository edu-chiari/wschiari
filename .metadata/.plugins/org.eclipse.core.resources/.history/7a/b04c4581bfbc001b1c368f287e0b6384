package variaveis;

import javax.swing.JOptionPane;

public class TiposDados {
	// main é o start point de uma aplicação Java
	// é a chave de ignição do carro
	public static void main(String[] args) {
		
		// Sintaxe: <Tipo de dado> <nome da variavel> = <dados>
		
		String nome=JOptionPane.showInputDialog("digite o seu nome");
		int idade = 42;
		double altura = 1.81;
		
		//String nome = "Eduardo";
		//int idade = 42;
		//double altura = 1.81;
		
		System.out.println("nome...: " + nome);
		System.out.println("idade...: " + idade);
		System.out.println("altura...:" + altura);
	
		
		/*
		 * Dados (podem ser): 
		 * Alfanúmericos (um texto, parte de um texto, ou um número que não será utilizado em operações matemáticas
		 * CEP (RH da empresa) = 00100-009 
		 * 
		 * Na linguagem Java: String (sempre com o S maiusculo)
		 * 
		 * 		
		 * Númericos (representa um dado que PODE ser utilizado em expressões matemáticas e/ou é considerado um dado
		 * critico para o contexto
		 * CEP (aplicação dos correios)
		 * Funcional entre os colaboradores da empresa
		 * 
		 * Na linguagem Java: 
		 * int: usado para representar números inteiros
		 * double: para números reais (com casas decimais)
		 * 
		 */
		
				
		
		
		
		
		
		
	}
		
	// em uma classe encontramos: métodos e atributos
	// nossa classe é publica
	
}
