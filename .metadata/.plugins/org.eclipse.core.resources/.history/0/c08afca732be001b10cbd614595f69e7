package repeticao;

import javax.swing.JOptionPane;

public class DesafioDo {

	public static void main(String[] args) {
		
		/*
		 * Missão 1
		 * jogador 1 digita um numero inteiro
		 * Jogador 2 deve acertar o numero
		 * quando ele acertar, devera aparecer a mensagem "Parabéns você acertou"
		 * 
		 * Missão 2
		 * Acrescente dicas para o jogador 2 informando se o numero é > ou < o que ele digitou
		 *
		 * Missão 3
		 * Acrescente um contador de tentativas que será exibido quando o jogador 2 acertar
		 *  A mensagem deverá ser `Parabéns, você acertou com X tentativas"
		 *  Terá que criar uma variavel para contar
		 *  
		 *  != e => não é igual
		 */
		
		// Missão 1
		
		int numero1 = Integer.parseInt(JOptionPane.showInputDialog("Jogador 1: Digite um número"));
		int numero2 = Integer.parseInt(JOptionPane.showInputDialog("Jogador 2: Tente adivinhar"));
		
		while (numero1==numero2) {
			numero2 = Integer.parseInt(JOptionPane.showInputDialog("Parabéns você acertou"));
		
		}
		
	}
}
